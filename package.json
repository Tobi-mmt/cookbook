{
	"name": "cookbook-svelte",
	"version": "0.0.1",
	"engines": {
		"node": "22"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check . && eslint --ignore-pattern '.gitignore' .",
		"format": "prettier --ignore-path .gitignore --write . && eslint --ignore-pattern '.gitignore' --fix .",
		"e2e": "cypress run",
		"test": "vitest",
		"get-random-id": "echo $RANDOM | md5 | head -c 15; echo;",
		"get-thumbnail": "node ./scripts/getThumbnail.js",
		"prepare": "husky"
	},
	"devDependencies": {
		"@eslint/js": "9.20.0",
		"@sveltejs/adapter-auto": "4.0.0",
		"@sveltejs/kit": "2.15.2",
		"@sveltejs/vite-plugin-svelte": "5.0.3",
		"@typescript-eslint/eslint-plugin": "8.24.0",
		"@typescript-eslint/parser": "8.24.0",
		"cypress": "14.0.3",
		"eslint": "9.20.1",
		"eslint-config-prettier": "10.0.1",
		"eslint-plugin-svelte": "2.46.1",
		"globals": "15.14.0",
		"husky": "9.1.7",
		"lint-staged": "15.4.3",
		"prettier": "3.5.1",
		"prettier-plugin-svelte": "3.3.3",
		"svelte": "5.17.3",
		"svelte-check": "4.1.3",
		"tslib": "2.8.1",
		"typescript": "5.7.3",
		"typescript-eslint": "8.24.0",
		"vite": "6.1.0",
		"vitest": "3.0.5"
	},
	"type": "module",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,svelte,json,md,html}": "yarn format"
	},
	"dependencies": {
		"@vercel/analytics": "1.5.0",
		"fuse.js": "7.1.0",
		"sharp": "^0.33.0"
	}
}
