{
	"name": "cookbook-svelte",
	"version": "0.0.1",
	"engines": {
		"node": "20"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check . && eslint --ignore-pattern '.gitignore' .",
		"format": "prettier --ignore-path .gitignore --write . && eslint --ignore-pattern '.gitignore' --fix .",
		"e2e": "cypress run",
		"test": "vitest",
		"get-random-id": "echo $RANDOM | md5 | head -c 15; echo;",
		"get-thumbnail": "node ./scripts/getThumbnail.js",
		"prepare": "husky"
	},
	"devDependencies": {
		"@eslint/js": "9.15.0",
		"@sveltejs/adapter-auto": "3.3.1",
		"@sveltejs/kit": "2.8.3",
		"@sveltejs/vite-plugin-svelte": "3.1.2",
		"@typescript-eslint/eslint-plugin": "8.15.0",
		"@typescript-eslint/parser": "8.15.0",
		"cypress": "13.16.0",
		"eslint": "9.15.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-svelte": "2.46.0",
		"globals": "15.12.0",
		"husky": "9.1.7",
		"lint-staged": "15.2.10",
		"prettier": "3.3.3",
		"prettier-plugin-svelte": "3.3.2",
		"svelte": "4.2.19",
		"svelte-check": "4.1.0",
		"tslib": "2.8.1",
		"typescript": "5.7.2",
		"typescript-eslint": "8.15.0",
		"vite": "5.4.11",
		"vitest": "2.1.6"
	},
	"type": "module",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,svelte,json,md,html}": "yarn format"
	},
	"dependencies": {
		"@vercel/analytics": "1.4.1",
		"fuse.js": "7.0.0",
		"sharp": "^0.33.0"
	}
}
