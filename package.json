{
	"name": "cookbook-svelte",
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"node": "24"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check . && eslint --ignore-pattern '.gitignore' .",
		"format": "prettier --ignore-path .gitignore --write . && eslint --ignore-pattern '.gitignore' --fix .",
		"e2e": "cypress run",
		"test": "vitest",
		"get-random-id": "echo $RANDOM | md5 | head -c 15; echo;",
		"get-thumbnail": "node ./scripts/getThumbnail.js",
		"prepare": "husky && svelte-kit sync"
	},
	"devDependencies": {
		"@eslint/js": "10.0.1",
		"@sveltejs/adapter-vercel": "6.3.2",
		"@sveltejs/enhanced-img": "^0.10.0",
		"@sveltejs/kit": "2.52.0",
		"@sveltejs/vite-plugin-svelte": "6.2.4",
		"@typescript-eslint/eslint-plugin": "8.56.0",
		"@typescript-eslint/parser": "8.56.0",
		"cypress": "15.10.0",
		"eslint": "10.0.0",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-svelte": "3.15.0",
		"globals": "17.3.0",
		"husky": "9.1.7",
		"lint-staged": "16.2.7",
		"prettier": "3.8.1",
		"prettier-plugin-svelte": "3.4.1",
		"svelte": "5.51.2",
		"svelte-check": "4.4.0",
		"tslib": "2.8.1",
		"typescript": "5.9.3",
		"typescript-eslint": "8.56.0",
		"vite": "7.3.1",
		"vitest": "4.0.18"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,svelte,json,md,html}": "yarn format"
	},
	"dependencies": {
		"@vercel/analytics": "1.6.1",
		"fuse.js": "7.1.0",
		"sharp": "^0.34.0"
	},
	"packageManager": "yarn@1.22.22"
}
