{
	"name": "cookbook-svelte",
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"node": "22"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check . && eslint --ignore-pattern '.gitignore' .",
		"format": "prettier --ignore-path .gitignore --write . && eslint --ignore-pattern '.gitignore' --fix .",
		"e2e": "cypress run",
		"test": "vitest",
		"get-random-id": "echo $RANDOM | md5 | head -c 15; echo;",
		"get-thumbnail": "node ./scripts/getThumbnail.js",
		"prepare": "husky && svelte-kit sync"
	},
	"devDependencies": {
		"@eslint/js": "9.36.0",
		"@lhci/cli": "0.15.1",
		"@sveltejs/adapter-vercel": "5.10.2",
		"@sveltejs/enhanced-img": "^0.8.0",
		"@sveltejs/kit": "2.43.5",
		"@sveltejs/vite-plugin-svelte": "6.2.1",
		"@typescript-eslint/eslint-plugin": "8.44.0",
		"@typescript-eslint/parser": "8.44.0",
		"cypress": "15.3.0",
		"eslint": "9.36.0",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-svelte": "3.12.4",
		"globals": "16.4.0",
		"husky": "9.1.7",
		"lint-staged": "16.1.6",
		"prettier": "3.6.2",
		"prettier-plugin-svelte": "3.4.0",
		"svelte": "5.39.6",
		"svelte-check": "4.3.2",
		"tslib": "2.8.1",
		"typescript": "5.9.3",
		"typescript-eslint": "8.44.0",
		"vite": "7.1.7",
		"vitest": "3.2.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,svelte,json,md,html}": "yarn format"
	},
	"dependencies": {
		"fuse.js": "7.1.0",
		"sharp": "^0.34.0"
	},
	"packageManager": "yarn@1.22.22"
}
